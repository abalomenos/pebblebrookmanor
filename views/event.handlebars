<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h3 class="card-title" id={{event.id}}>Event {{event.id}}</h3>
          <p>
            <strong>Date</strong>: {{event.eventDate}}</p>
          <p>
            <strong>Room Name</strong>: {{event.roomName}}</p>
          <p>
            <strong>Customer Name</strong>: {{event.customerName}}</p>
          <p>
            <strong>Customer Email</strong>: {{event.customerEmail}}</p>
          <p>
            <strong>Event Size</strong>: {{event.partySize}}</p>

          <h5>Employees:</h5>
          <ul id="employee-list" class="list-group">
            {{#each employees}}
            <li data-id="{{this.id}}" class="list-group-item">
              <a href="employee/{{this.id}}">{{this.name}}</a>
              <button class="btn btn-danger float-right delete">x</button>
            </li>
            {{/each}}
          </ul>
          <a href="/admin">‚Üê Return to Admin</a>
          <button type="button" class="btn btn-success" id="select-event">Select</button>
        </div>
      </div>
    </div>
  </div>
</div>