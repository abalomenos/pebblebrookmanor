      <div class="col-md-8 eventLayout">
          <div id="addEmployeeContainerShow">
            <form class="shade" action="POST">
            <div class="form-group">
              <h2><label for="employeeName">Employee Name</label></h2>
              <input type="text" id="employeeName" class="form-control" aria-describedby="employeeName" placeholder="Enter Employee Name">
            </div>
            <div class="form-group">
              <h2><label for="employeeWage">Employee Wage</label></h2>
              <input type="text" class="form-control" id="employeeWage" aria-describedby="employeeWage" placeholder="Dollar amount per hour">
            </div>
            <div class="form-group">
              <h2><label for="employeeImage">Employee Image</label></h2>
              <input type="text" class="form-control" id="employeeImage" aria-describedby="employeeImage" placeholder="Enter url path to image">
            </div>
            <div class="text-center">
              <button id="addEmployee" class="btn btn-primary submitButton">Update</button>
            </div>
          </form>
        </div>
      </div>
      <div class="col-md-4">
        <div class="eventActions">
          <h4 class="center">Actions</h4>
          <ul>
            
                <li>
                  <a href="/admin" class="actionItemsMain" type="button">‚Üê Go Back</a>                  
                </li>
              
          </ul>
          <div class="eventCard" id='{{event.id}}'>
            <h3 class="card-title center">Edit Employee</h3>
            <p class="p1">
                <div class="text-center">
                    <img src='{{employee.image}}'/>
                </div>
            </p>
            <p class="p1">
              <strong>Name</strong>: {{employee.name}}
            </p>
            <p class="p1">
              <strong>Wage:</strong> ${{employee.wage}}/hr
            </p>
          </div>
        </div>
